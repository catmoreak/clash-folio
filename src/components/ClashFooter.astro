<style>
/* Footer Ticker Bar Styles */
.footer-ticker-bar {
  width: 100vw;
  height: 8px;
  background: linear-gradient(90deg, #bfa76f 0%, #e2b007 100%);
  overflow: hidden;
  box-shadow: 0 2px 8px #bfa76f88;
  position: sticky;
  top: 0;
  left: 0;
  z-index: 12001;
  margin-bottom: 0;
}
.footer-ticker-fill {
  position: absolute;
  left: -30vw;
  top: 0;
  height: 100%;
  width: 30vw;
  background: linear-gradient(90deg, #ffe066 0%, #e2b007 80%, #bfa76f 100%);
  opacity: 0.95;
  border-radius: 0 8px 8px 0;
  box-shadow: 0 0 16px 4px #e2b00788;
  animation: footer-ticker-move 2.8s linear infinite;
}
@keyframes footer-ticker-move {
  0% { left: -30vw; }
  100% { left: 100vw; }
}
@font-face {
  font-family: 'Supercell-Magic';
  src: url('/fonts/SupercellMagic.woff') format('woff');
  font-weight: normal;
  font-style: normal;
}
.clash-footer {
  background: linear-gradient(90deg, #3b1e08 0%, #7c4a03 100%);
  color: #fff;
  border-top: 6px solid #e2b007;
  padding: 1.2rem 0 0.7rem 0;
  font-family: 'Supercell-Magic', 'Comic Sans MS', cursive, sans-serif;
  box-shadow: 0 -4px 16px #0007;
  margin-top: 3rem;
}
.clash-footer__content {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 1.5rem;
}
.clash-footer__shield {
  width: 100px;
  height: 90px;

 
  
}
.clash-footer__barbarian {
  width: 80px;
  height: 90px;
  display: block;
}
.clash-footer__text {
  font-size: 1.1rem;
  color: #e2b007;
  text-shadow: 1px 1px 0 #000, 0 0 8px #e2b007;
  letter-spacing: 1px;
  margin: 0 0.5rem;
}
  /* Parrot Greeter Styles */
.parrot-greeter {
  position: fixed;
  right: 2.2vw;
  bottom: 2.2vw;
  z-index: 12000;
  display: flex;
  align-items: flex-end;
  gap: 0.3rem;
  pointer-events: none;
}
.parrot-greeter {
  /* ...existing code... */
}
body.has-loader .parrot-greeter {
  display: none !important;
}
.parrot-emoji {
  width: 82px;
  height: 92px;
  display: block;
  filter: drop-shadow(0 4px 8px #0008);
  animation: parrot-wave 1.2s infinite alternate;
  transform-origin: 60% 80%;
}
@keyframes parrot-wave {
  0% { transform: rotate(-8deg) scale(1); }
  30% { transform: rotate(18deg) scale(1.08); }
  60% { transform: rotate(-8deg) scale(1); }
  100% { transform: rotate(-8deg) scale(1); }
}
.parrot-speech {
  background: #fffbe7;
  color: #3b1e08;
  font-family: 'Comic Sans MS', cursive, sans-serif;
  font-size: 1.1rem;
  border-radius: 1.2em 1.2em 1.2em 0.4em;
  padding: 0.25em 0.8em;
  margin-bottom: 1.1em;
  margin-left: 0.1em;
  box-shadow: 0 2px 8px #0002;
  border: 2px solid #e2b007;
  position: relative;
  animation: parrot-speech-pop 1.2s cubic-bezier(0.68,-0.55,0.27,1.55);
}
@keyframes parrot-speech-pop {
  0% { opacity: 0; transform: scale(0.7) translateY(20px); }
  80% { opacity: 1; transform: scale(1.08) translateY(-4px); }
  100% { opacity: 1; transform: scale(1) translateY(0); }
}
</style>
