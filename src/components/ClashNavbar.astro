<style>
@font-face {
  font-family: 'Supercell-Magic';
  src: url('https://fonts.cdnfonts.com/s/16171/SupercellMagic.woff') format('woff');
  font-weight: normal;
  font-style: normal;
}

.clash-navbar {
  background: linear-gradient(90deg, #3b1e08 0%, #7c4a03 100%);
  color: #fff;
  padding: 0.5rem 2rem;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-family: 'Supercell-Magic', 'Comic Sans MS', cursive, sans-serif;
  box-shadow: 0 6px 16px #0007;
  border-bottom: 6px solid #e2b007;
  position: sticky;
  top: 0;
  z-index: 100;
  animation: navbar-slide-in 1s cubic-bezier(0.68, -0.55, 0.27, 1.55);
}

@keyframes navbar-slide-in {
  0% {
    transform: translateY(-100%);
    opacity: 0;
  }
  100% {
    transform: translateY(0);
    opacity: 1;
  }
}

.clash-navbar__brand {
  display: flex;
  align-items: center;
  gap: 1rem;
}

.clash-navbar__shield {
  width: 48px;
  height: 48px;
  border-radius: 50%;
  border: 3px solid #e2b007;
  background: #fff2;
  box-shadow: 0 2px 8px #0006;
  transition: transform 0.5s cubic-bezier(0.68, -0.55, 0.27, 1.55);
}
.clash-navbar__shield:hover {
  transform: rotate(360deg) scale(1.15);
  box-shadow: 0 0 24px 6px #e2b00799, 0 2px 8px #0006;
}

.clash-navbar__title {
  font-size: 2rem;
  font-weight: bold;
  color: #e2b007;
  text-shadow: 2px 2px 0 #000, 0 0 8px #e2b007, 0 0 16px #fff7;
  letter-spacing: 2px;
  animation: glow 2s infinite alternate;
}

@keyframes glow {
  from {
    text-shadow: 2px 2px 0 #000, 0 0 8px #e2b007, 0 0 16px #fff7;
  }
  to {
    text-shadow: 2px 2px 0 #000, 0 0 24px #e2b007, 0 0 32px #fff;
  }
}

.clash-navbar__links {
  list-style: none;
  display: flex;
  gap: 2.5rem;
  margin: 0;
  padding: 0;
  align-items: center;
}

.clash-navbar__link {
  color: #fff;
  text-decoration: none;
  font-size: 1.2rem;
  font-weight: bold;
  padding: 0.5rem 1.2rem;
  border-radius: 12px;
  box-shadow: 0 2px 8px #0004;
  transition: background 0.2s, color 0.2s, transform 0.2s;
  position: relative;
}
.clash-navbar__link--chief {
  background: #e2b007;
  color: #3b1e08;
}
.clash-navbar__link--about {
  background: #3b1e08;
  border: 2px solid #e2b007;
}
.clash-navbar__link:hover,
.clash-navbar__link:active,
.clash-navbar__link:focus {
  background: #fff;
  color: #e2b007;
  transform: scale(1.08) rotate(-2deg);
  box-shadow: 0 0 16px #e2b00799, 0 2px 8px #0004;
  outline: none;
}

.clash-navbar__status {
  display: flex;
  align-items: center;
  gap: 0.7rem;
}

.clash-navbar__icon {
  font-size: 2rem;
  animation: shield-bounce 1.5s infinite alternate;
}

@keyframes shield-bounce {
  from {
    transform: translateY(0);
  }
  to {
    transform: translateY(-8px) scale(1.1);
  }
}

.clash-navbar__th {
  font-size: 1.1rem;
  color: #e2b007;
  font-weight: bold;
  text-shadow: 1px 1px #000;
  letter-spacing: 1px;
  animation: th-glow 1.2s infinite alternate;
}
@keyframes th-glow {
  from {
    text-shadow: 1px 1px #000, 0 0 4px #e2b007;
  }
  to {
    text-shadow: 1px 1px #000, 0 0 16px #e2b007;
  }
}

.clash-navbar__maxed {
  font-size: 1.1rem;
  color: #fff;
  font-weight: bold;
  animation: maxed-flash 1.5s infinite alternate;
}
@keyframes maxed-flash {
  from {
    color: #fff;
  }
  to {
    color: #e2b007;
  }
}
  .clash-navbar__link {
    /* ...existing code... */
    overflow: visible;
  }
  .glitter {
    pointer-events: none;
    position: absolute;
    right: 0.5em;
    top: 50%;
    transform: translateY(-50%);
    width: 1.8em;
    height: 1.8em;
    z-index: 2;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .clash-navbar__link .glitter {
    opacity: 0;
    transition: opacity 0.2s;
  }
  .clash-navbar__link:hover .glitter,
  .clash-navbar__link:focus .glitter {
    opacity: 1;
    animation: glitter-sparkle 0.7s linear;
  }
  .glitter::before {
    content: '✨';
    font-size: 1.7em;
    animation: glitter-twinkle 0.7s linear;
    color: #ffe066;
    text-shadow: 0 0 16px #ffe066, 0 0 32px #fff, 0 0 8px #e2b007;
    filter: drop-shadow(0 0 8px #ffe066) drop-shadow(0 0 16px #fff);
  }
  @keyframes glitter-sparkle {
    0% { filter: brightness(1); transform: scale(0.7) rotate(0deg); }
    40% { filter: brightness(2.5); transform: scale(1.2) rotate(10deg); }
    60% { filter: brightness(2.5); transform: scale(1.1) rotate(-10deg); }
    100% { filter: brightness(1); transform: scale(0.7) rotate(0deg); }
  }
  @keyframes glitter-twinkle {
    0% { opacity: 0; transform: scale(0.5) rotate(-10deg); }
    40% { opacity: 1; transform: scale(1.2) rotate(10deg); }
    60% { opacity: 1; transform: scale(1.1) rotate(-10deg); }
    100% { opacity: 0; transform: scale(0.5) rotate(0deg); }
  }
</style>
