---
layout: '../layouts/Layout.astro'
title: Map
---

<style>
  .island-map-section {
    padding: 2.5rem 0 2rem 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    min-height: 70vh;
    background: linear-gradient(180deg, #7c4a03 0%, #a97436 50%, #c49e60 80%, #ffe066 100%);
  }
  .island-map-title {
    font-family: 'Supercell-Magic', 'Comic Sans MS', cursive, serif;
    color: #1e88e5;
    font-size: 2.7rem;
    margin-bottom: 1.2rem;
    letter-spacing: 2px;
    text-shadow: 2px 2px 0 #fffbe7, 0 0 12px #ffb300;
  }
  .island-map-container {
    background: #fffbe7;
    border-radius: 2.8rem;
    box-shadow: 0 8px 32px #3bb3e044, 0 1.5px 0 #ffb300, 0 0 0 12px #ffe066 inset;
    padding: 2.2rem 2.2rem 1.2rem 2.2rem;
    margin-bottom: 1.5rem;
    max-width: 99vw;
    overflow-x: auto;
    border: 7px double #1e88e5;
    position: relative;
  }
  .island-map-svg {
    width: 700px;
    height: 480px;
    display: block;
    background: none;
    border-radius: 2.2rem;
  }
  .island-map-legend {
    display: flex;
    gap: 2.2rem;
    font-size: 1.2rem;
    color: #1e88e5;
    margin-top: 0.7rem;
    font-family: 'Comic Sans MS', cursive, serif;
  }
  .legend-x {
    color: #1e88e5;
    font-size: 1.5em;
    margin-right: 0.2em;
  }
  .legend-trophy {
    color: #ff9100;
    font-size: 1.5em;
    margin-right: 0.2em;
  }
  .legend-dot {
    display: inline-block;
    width: 18px;
    height: 18px;
    background: #ffe066;
    border-radius: 50%;
    margin-right: 4px;
    border: 2.5px solid #1e88e5;
  }
  @media (max-width: 800px) {
    .island-map-svg {
      width: 96vw;
      height: 60vw;
      min-width: 260px;
      min-height: 180px;
    }
    .island-map-container {
      padding: 0.7rem 0.2rem 0.7rem 0.2rem;
    }
  }
</style>

<section class="island-map-section">
  <h1 class="island-map-title">Island Treasure Map</h1>
  <div class="island-map-container">
    <svg class="island-map-svg" viewBox="0 0 700 480" fill="none" xmlns="http://www.w3.org/2000/svg">
      <!-- Sand background -->
      <rect x="0" y="0" width="700" height="480" rx="60" fill="url(#sand-bg)" stroke="#1e88e5" stroke-width="13"/>
      <defs>
        <radialGradient id="sand-bg" cx="50%" cy="60%" r="80%">
          <stop offset="0%" stop-color="#ffe066"/>
          <stop offset="70%" stop-color="#fffbe7"/>
          <stop offset="100%" stop-color="#b3e6ff"/>
        </radialGradient>
        <linearGradient id="sea" x1="0" y1="0" x2="0" y2="1">
          <stop offset="0%" stop-color="#7fdcff"/>
          <stop offset="100%" stop-color="#1e88e5"/>
        </linearGradient>
        <radialGradient id="island" cx="50%" cy="50%" r="60%">
          <stop offset="0%" stop-color="#ffe066"/>
          <stop offset="100%" stop-color="#e2b007"/>
        </radialGradient>
      </defs>
      <!-- Sea -->
      <ellipse cx="350" cy="240" rx="340" ry="200" fill="url(#sea)"/>
      <!-- Main island -->
      <ellipse cx="350" cy="260" rx="180" ry="90" fill="url(#island)" stroke="#e2b007" stroke-width="6"/>
      <!-- Coconut trees -->
      <g>
        <g transform="translate(250,210)">
          <rect x="-5" y="10" width="10" height="38" rx="4" fill="#a67c52"/>
          <ellipse cx="0" cy="10" rx="18" ry="8" fill="#4be37a"/>
          <ellipse cx="-10" cy="5" rx="7" ry="4" fill="#388e3c"/>
          <ellipse cx="10" cy="5" rx="7" ry="4" fill="#388e3c"/>
        </g>
        <g transform="translate(440,180) scale(1.1)">
          <rect x="-5" y="10" width="10" height="38" rx="4" fill="#a67c52"/>
          <ellipse cx="0" cy="10" rx="18" ry="8" fill="#4be37a"/>
          <ellipse cx="-10" cy="5" rx="7" ry="4" fill="#388e3c"/>
          <ellipse cx="10" cy="5" rx="7" ry="4" fill="#388e3c"/>
        </g>
        <g transform="translate(320,320) scale(0.9)">
          <rect x="-4" y="10" width="8" height="28" rx="3" fill="#a67c52"/>
          <ellipse cx="0" cy="10" rx="12" ry="5" fill="#4be37a"/>
          <ellipse cx="-7" cy="5" rx="5" ry="3" fill="#388e3c"/>
          <ellipse cx="7" cy="5" rx="5" ry="3" fill="#388e3c"/>
        </g>
      </g>
      <!-- Old ships and Start X -->
      <g>
        <g transform="translate(120,400) scale(1.1)">
          <rect x="-18" y="8" width="36" height="10" rx="5" fill="#795548"/>
          <polygon points="-12,8 0,-18 12,8" fill="#fffbe7" stroke="#795548" stroke-width="2"/>
          <rect x="-2" y="-18" width="4" height="26" fill="#ffe066" stroke="#795548" stroke-width="1.5"/>
          <!-- Start X icon -->
          <text x="-28" y="-22" font-size="38" font-family="monospace, serif" font-weight="bold" fill="#d32f2f" stroke="#fffbe7" stroke-width="2" text-anchor="middle">X</text>
        </g>
        <g transform="translate(600,120) scale(0.9)">
          <rect x="-14" y="6" width="28" height="8" rx="4" fill="#795548"/>
          <polygon points="-8,6 0,-14 8,6" fill="#fffbe7" stroke="#795548" stroke-width="1.5"/>
          <rect x="-1.5" y="-14" width="3" height="18" fill="#ffe066" stroke="#795548" stroke-width="1"/>
        </g>
      </g>
      <!-- Treasure chest -->
      <g transform="translate(350,260)">
        <rect x="-18" y="8" width="36" height="18" rx="6" fill="#ffe066" stroke="#e2b007" stroke-width="3"/>
        <rect x="-18" y="-10" width="36" height="18" rx="8" fill="#ff9100" stroke="#e2b007" stroke-width="3"/>
        <ellipse cx="0" cy="-10" rx="16" ry="7" fill="#fffbe7" opacity="0.7"/>
        <circle cx="0" cy="17" r="3" fill="#e2b007"/>
      </g>
      <!-- Treasure route -->
      <path id="treasure-route" d="M120 400 Q 200 220 350 320 Q 500 420 600 120" stroke="#ff9100" stroke-width="7" fill="none" stroke-dasharray="18 12"/>
      <!-- Animated moving dot (treasure route) -->
      <circle r="13" fill="#ffe066" stroke="#1e88e5" stroke-width="5">
        <animateMotion dur="4s" repeatCount="indefinite">
          <mpath xlink:href="#treasure-route" />
        </animateMotion>
      </circle>
      <!-- Faded map label -->
      <text x="180" y="80" font-size="22" font-family="serif" fill="#7c1f47" opacity="0.18" style="font-style:italic;">"X marks the spot!"</text>
    </svg>
  </div>
  
</section>
