---
import TicTacToeComponent from "../components/TicTacToe.astro";
---

<style>
@keyframes bg-move {
  0% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
  100% { background-position: 0% 50%; }
}
@keyframes float-tree {
  0% { transform: translateY(0); }
  50% { transform: translateY(-10px); }
  100% { transform: translateY(0); }
}
@keyframes cloud-move {
  0% { left: -20vw; }
  100% { left: 120vw; }
}
@keyframes bird-fly {
  0% { left: -10vw; }
  100% { left: 110vw; }
}
.bg-decor {
  position: fixed;
  pointer-events: none;
  z-index: 0;
}
.coconut-tree {
  left: 0;
  bottom: 0;
  width: 70px;
  height: auto;
  animation: float-tree 3.5s ease-in-out infinite;
}
.coconut-tree-right {
  right: 2vw;
  bottom: 0;
  width: 70px;
  height: auto;
  transform: scaleX(-1);
  animation: float-tree 4s ease-in-out infinite 1.5s;
}
.animated-bg {
  min-height: 100vh;
  width: 100vw;
  margin: 0;
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(270deg, #7ed6ff 0%, #b3e0ff 30%, #f7e9b0 70%, #f2d16b 100%);
  background-size: 200% 200%;
  animation: bg-move 16s ease-in-out infinite;
  position: relative;
  overflow: hidden;
}
.sun {
  position: fixed;
  top: 4vh;
  left: 8vw;
  width: 60px;
  height: 60px;
  background: radial-gradient(circle at 60% 40%, #fffbe0 0%, #ffe066 60%, #ffd700 100%);
  border-radius: 50%;
  box-shadow: 0 0 30px 10px #ffe06655;
  z-index: 1;
  opacity: 0.92;
}
.cloud {
  position: fixed;
  top: 8vh;
  width: 90px;
  height: 36px;
  background: #fff;
  border-radius: 50px;
  opacity: 0.6;
  filter: blur(0.5px);
  z-index: 1;
  animation: cloud-move 40s linear infinite;
}
.cloud2 {
  top: 14vh;
  width: 60px;
  height: 24px;
  left: 10vw;
  opacity: 0.4;
  animation-duration: 55s;
}
.cloud3 {
  top: 20vh;
  width: 70px;
  height: 28px;
  left: 30vw;
  opacity: 0.5;
  animation-duration: 70s;
}
.sand-texture {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100vw;
  height: 80px;
  background: repeating-radial-gradient(circle at 20% 80%, #f2d16b 2px, #f7e9b0 4px, transparent 8px), repeating-radial-gradient(circle at 80% 90%, #f2d16b 2px, #f7e9b0 4px, transparent 8px);
  z-index: 2;
  opacity: 0.18;
  pointer-events: none;
}
.tic-tac-toe {
  box-shadow: 0 4px 16px 0 #0003, 0 1px 6px #ffd70022;
  z-index: 10;
  max-width: 95vw;
}
.css-bird {
  position: fixed;
  top: 12vh;
  left: -10vw;
  width: 28px;
  height: 14px;
  z-index: 2;
  animation: bird-fly 18s linear infinite;
}
.css-bird2 {
  top: 18vh;
  width: 20px;
  height: 10px;
  animation-duration: 22s;
  animation-delay: 6s;
  opacity: 0.7;
}
.css-bird3 {
  top: 24vh;
  width: 14px;
  height: 7px;
  animation-duration: 25s;
  animation-delay: 12s;
  opacity: 0.5;
}
.bird-arch {
  position: absolute;
  left: 0;
  top: 40%;
  width: 100%;
  height: 40%;
  border-bottom: 2px solid #222;
  border-radius: 0 0 100% 100%/0 0 100% 100%;
  background: transparent;
}
.bird-arch.right {
  left: 50%;
  width: 50%;
  border-bottom: 2px solid #222;
  border-radius: 0 0 100% 100%/0 0 100% 100%;
  transform: scaleX(-1) rotate(-10deg);
}
.bird-dot {
  position: absolute;
  left: 48%;
  top: 80%;
  width: 2.5px;
  height: 2.5px;
  background: #222;
  border-radius: 50%;
  z-index: 1;
}
@media (max-width: 600px) {
  .sun { width: 36px; height: 36px; left: 4vw; }
  .cloud, .cloud2, .cloud3 { width: 40px !important; height: 16px !important; }
  .coconut-tree, .coconut-tree-right { width: 38px; }
  .sand-texture { height: 40px; }
  .tic-tac-toe { padding: 0.5rem !important; }
}
</style>

<div class="animated-bg">
  <div class="sun"></div>
  <div class="cloud" style="left: 5vw;"></div>
  <div class="cloud cloud2"></div>
  <div class="cloud cloud3"></div>
  <div class="css-bird">
    <div class="bird-arch"></div>
    <div class="bird-arch right"></div>
    <div class="bird-dot"></div>
  </div>
  <div class="css-bird css-bird2">
    <div class="bird-arch"></div>
    <div class="bird-arch right"></div>
    <div class="bird-dot"></div>
  </div>
  <div class="css-bird css-bird3">
    <div class="bird-arch"></div>
    <div class="bird-arch right"></div>
    <div class="bird-dot"></div>
  </div>
  <img src="/src/assets/coconut-tree.svg" alt="Coconut Tree" class="bg-decor coconut-tree" loading="lazy" />
  <img src="/src/assets/coconut-tree.svg" alt="Coconut Tree" class="bg-decor coconut-tree-right" loading="lazy" />
  <div class="sand-texture"></div>
  <TicTacToeComponent />
</div>
