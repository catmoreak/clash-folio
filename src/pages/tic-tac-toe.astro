---
import TicTacToeComponent from "../components/TicTacToe.astro";
---

<style>
@keyframes bg-move {
  0% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
  100% { background-position: 0% 50%; }
}
@keyframes float-tree {
  0% { transform: translateY(0); }
  50% { transform: translateY(-18px); }
  100% { transform: translateY(0); }
}
@keyframes cloud-move {
  0% { left: -20vw; }
  100% { left: 120vw; }
}
@keyframes bird-fly {
  0% { left: -10vw; }
  100% { left: 110vw; }
}
@keyframes wing-flap {
  0%, 100% { transform: rotate(0deg); }
  50% { transform: rotate(-15deg); }
}
.bg-decor {
  position: fixed;
  pointer-events: none;
  z-index: 0;
}
.coconut-tree {
  left: 0;
  bottom: 0;
  width: 90px;
  height: auto;
  animation: float-tree 3.5s ease-in-out infinite;
}
.coconut-tree-right {
  right: 2vw;
  bottom: 0;
  width: 90px;
  height: auto;
  transform: scaleX(-1);
  animation: float-tree 4s ease-in-out infinite 1.5s;
}
.animated-bg {
  min-height: 100vh;
  width: 100vw;
  margin: 0;
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(270deg, #7ed6ff 0%, #b3e0ff 30%, #f7e9b0 70%, #f2d16b 100%);
  background-size: 200% 200%;
  animation: bg-move 12s ease-in-out infinite;
  position: relative;
  overflow: hidden;
}
.sun {
  position: fixed;
  top: 4vh;
  left: 8vw;
  width: 90px;
  height: 90px;
  background: radial-gradient(circle at 60% 40%, #fffbe0 0%, #ffe066 60%, #ffd700 100%);
  border-radius: 50%;
  box-shadow: 0 0 60px 20px #ffe06688;
  z-index: 1;
  opacity: 0.95;
}
.cloud {
  position: fixed;
  top: 8vh;
  width: 120px;
  height: 50px;
  background: #fff;
  border-radius: 50px;
  opacity: 0.7;
  filter: blur(1px);
  z-index: 1;
  animation: cloud-move 40s linear infinite;
}
.cloud2 {
  top: 14vh;
  width: 80px;
  height: 36px;
  left: 10vw;
  opacity: 0.5;
  animation-duration: 55s;
}
.cloud3 {
  top: 20vh;
  width: 100px;
  height: 40px;
  left: 30vw;
  opacity: 0.6;
  animation-duration: 70s;
}
.sand-texture {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100vw;
  height: 120px;
  background: repeating-radial-gradient(circle at 20% 80%, #f2d16b 2px, #f7e9b0 4px, transparent 8px), repeating-radial-gradient(circle at 80% 90%, #f2d16b 2px, #f7e9b0 4px, transparent 8px);
  z-index: 2;
  opacity: 0.25;
  pointer-events: none;
}
.tic-tac-toe {
  box-shadow: 0 12px 48px 0 #0005, 0 2px 16px #ffd70044;
  z-index: 10;
}
.css-bird {
  position: fixed;
  top: 12vh;
  left: -10vw;
  width: 32px;
  height: 18px;
  z-index: 2;
  animation: bird-fly 18s linear infinite;
}
.css-bird2 {
  top: 18vh;
  width: 24px;
  height: 12px;
  animation-duration: 22s;
  animation-delay: 6s;
  opacity: 0.7;
}
.css-bird3 {
  top: 24vh;
  width: 18px;
  height: 9px;
  animation-duration: 25s;
  animation-delay: 12s;
  opacity: 0.5;
}
.bird-wing-v {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  border-bottom: 3px solid #222;
  border-radius: 0 0 60% 60%/0 0 100% 100%;
  transform: rotate(-18deg);
  background: transparent;
}
.bird-wing-v.right {
  left: 50%;
  transform: scaleX(-1) rotate(-18deg);
}
.bird-body-dot {
  position: absolute;
  left: 48%;
  top: 55%;
  width: 5px;
  height: 5px;
  background: #222;
  border-radius: 50%;
  z-index: 1;
}
</style>

<div class="animated-bg">
  <div class="sun"></div>
  <div class="cloud" style="left: 5vw;"></div>
  <div class="cloud cloud2"></div>
  <div class="cloud cloud3"></div>
  <div class="css-bird">
    <div class="bird-wing-v"></div>
    <div class="bird-wing-v right"></div>
    <div class="bird-body-dot"></div>
  </div>
  <div class="css-bird css-bird2">
    <div class="bird-wing-v"></div>
    <div class="bird-wing-v right"></div>
    <div class="bird-body-dot"></div>
  </div>
  <div class="css-bird css-bird3">
    <div class="bird-wing-v"></div>
    <div class="bird-wing-v right"></div>
    <div class="bird-body-dot"></div>
  </div>
  <img src="/src/assets/coconut-tree.svg" alt="Coconut Tree" class="bg-decor coconut-tree" />
  <img src="/src/assets/coconut-tree.svg" alt="Coconut Tree" class="bg-decor coconut-tree-right" />
  <div class="sand-texture"></div>
  <TicTacToeComponent />
</div>
