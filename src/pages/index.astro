<style>
.pirate-anim {
  position: absolute;
  z-index: 3;
  font-size: 2.5rem;
  filter: drop-shadow(0 2px 4px #0008);
  pointer-events: none;
  animation-duration: 3.5s;
  animation-iteration-count: infinite;
  animation-timing-function: linear;
}
.pirate1 {
  left: 10%;
  top: 22%;
  animation-name: pirate-walk1;
}
.pirate2 {
  right: 13%;
  top: 65%;
  animation-name: pirate-walk2;
}
.pirate3 {
  left: 44%;
  bottom: 13%;
  animation-name: pirate-attack3;
}
@keyframes pirate-walk1 {
  0% { transform: translateX(0) scaleX(1); }
  20% { transform: translateX(18px) scaleX(1.1); }
  40% { transform: translateX(0) scaleX(1); }
  60% { transform: translateX(-18px) scaleX(0.9); }
  80% { transform: translateX(0) scaleX(1); }
  100% { transform: translateX(0) scaleX(1); }
}
@keyframes pirate-walk2 {
  0% { transform: translateY(0) scaleX(1); }
  25% { transform: translateY(-12px) scaleX(1.1); }
  50% { transform: translateY(0) scaleX(1); }
  75% { transform: translateY(12px) scaleX(0.9); }
  100% { transform: translateY(0) scaleX(1); }
}
@keyframes pirate-attack3 {
  0% { transform: scale(1) rotate(-8deg); }
  10% { transform: scale(1.2) rotate(8deg); }
  20% { transform: scale(1) rotate(-8deg); }
  30% { transform: scale(1.2) rotate(8deg); }
  40% { transform: scale(1) rotate(-8deg); }
  100% { transform: scale(1) rotate(-8deg); }
}
</style>
